@model IEnumerable<EnglishCenter.Models.KhoaHoc>

@{
    ViewBag.Title = "Quản lý Khoá Học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý Khoá Học</h2>

<p>
    @Html.ActionLink("Tạo khoá học mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Khoá Học
        </th>
        <th>
            Giáo Viên
        </th>
        <th>
            Ngày bắt đầu
        </th>
        <th>
            Ngày kết thúc
        </th>
        <th>
            Giá
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenkhoahoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_gv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ngaybatdau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ngayketthuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gia)
        </td>
        <td>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
